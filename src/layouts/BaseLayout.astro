---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import TagSidebar from '../components/TagSidebar.astro';
import IntroOverlay from '../components/IntroOverlay.astro';

interface Props {
	title: string;
	description?: string;
	includeSidebar?: boolean;
}

const { title, description, includeSidebar = true } = Astro.props;

// 블로그 관련 페이지인지 확인 (/blog 또는 /tags로 시작)하고, includeSidebar가 true인 경우에만 표시
const showTags = includeSidebar && (Astro.url.pathname.startsWith('/blog') || Astro.url.pathname.startsWith('/tags'));

// 메인 페이지인지 확인 (인트로 오버레이 표시)
const isHomePage = Astro.url.pathname === '/';

// skipIntro 쿼리 파라미터 확인
const skipIntro = Astro.url.searchParams.get('skipIntro') === 'true';

// 포트폴리오 스타일이 필요한 페이지 (about 페이지 포함)
const isPortfolioPage = Astro.url.pathname === '/about';
---

<!doctype html>
<html lang="ko">
	<head>
		<BaseHead title={title} description={description} />
	</head>
	<body class={isHomePage || isPortfolioPage ? 'portfolio-page' : ''}>
		{isHomePage && !skipIntro && <IntroOverlay />}
		{!isHomePage && !isPortfolioPage && <Header />}
		<div class={`layout-container ${showTags ? 'has-sidebar' : ''} ${isHomePage || isPortfolioPage ? 'portfolio-layout' : ''}`}>
			{showTags && (
				<aside class="sidebar">
					<TagSidebar />
				</aside>
			)}
			<main class="main-content">
				<slot />
			</main>
		</div>
		{!isHomePage && !isPortfolioPage && <Footer />}
	</body>
</html>

<style>
	.layout-container {
		display: grid;
		min-height: 100vh;
		gap: 1em;
	}

	.layout-container.has-sidebar {
		grid-template-columns: 250px 1fr;
	}

	.layout-container:not(.has-sidebar) {
		grid-template-columns: 1fr;
	}

	.sidebar {
		padding: 1em;
	}

	.main-content {
		padding: 0;
		overflow-x: clip;
		overflow-y: visible;
		width: auto;
		max-width: none;
		margin: 0;
		position: relative;
	}

	.main-content > * {
		max-width: 100%;
		position: relative;
	}

	/* 포트폴리오 페이지 스타일 */
	body.portfolio-page {
		background: #000000;
		color: #ffffff;
	}

	/* 블로그 페이지 스타일 */
	body:has(.blog-section) {
		background: #000000;
		color: #ffffff;
	}

	.layout-container.portfolio-layout {
		grid-template-columns: 1fr;
		max-width: 100%;
		margin: 0;
		padding: 0;
		gap: 0;
	}

	.layout-container.portfolio-layout .main-content {
		padding: 0;
		margin: 0;
		max-width: 100%;
		width: 100%;
	}

	/* 모바일 및 태블릿 반응형 */
	@media (max-width: 1279px) {
		.layout-container.has-sidebar {
			grid-template-columns: 1fr;
		}

		.sidebar {
			display: none;
		}
	}
</style>
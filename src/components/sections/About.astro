---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  name: string;
  role: string;
  description: string;
  email?: string;
  profileImage?: ImageMetadata;
}

const { name, role, description, email, profileImage } = Astro.props;
---

<section id="about" class="min-h-screen flex items-center justify-center py-20 bg-gray-50">
  <div class="max-w-4xl mx-auto px-6">
    <div class="flex flex-col md:flex-row gap-12 items-center md:items-start">
      
      {profileImage && (
        <div class="flex-shrink-0 group">
          <div class="relative">
             <div class="absolute inset-0 bg-red-600 rounded-2xl transform translate-x-3 translate-y-3 transition-transform group-hover:translate-x-2 group-hover:translate-y-2"></div>
             <Image 
              src={profileImage} 
              alt={name} 
              class="relative w-48 h-48 md:w-64 md:h-64 rounded-2xl object-cover shadow-xl border border-gray-100 bg-white"
              width={512}
              height={512}
            />
          </div>
        </div>
      )}

      <div class="flex-1 text-center md:text-left">
        <h2 class="text-xs font-bold text-red-600 uppercase tracking-widest mb-3">About Me</h2>
        <h3 class="text-3xl font-bold text-gray-900 mb-6">{role}</h3>
        <p class="text-lg text-gray-600 leading-relaxed mb-8 whitespace-pre-line">
          {description}
        </p>

        {email && (
           <div class="inline-flex items-center gap-2 px-4 py-2 bg-white rounded-full border border-gray-200 shadow-sm hover:border-red-200 hover:shadow-md transition-all">
             <span class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></span>
             <a href={`mailto:${email}`} class="text-sm font-medium text-gray-600 hover:text-red-600 transition-colors">
               Contact: {email}
             </a>
           </div>
        )}
      </div>

    </div>
  </div>
</section>

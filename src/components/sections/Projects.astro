---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Project {
  title: string;
  category: string;
  description: string;
  tags: string[];
  link?: string;
  image?: ImageMetadata | string; 
}

interface Props {
  projects: Project[];
}

const { projects } = Astro.props;
---

<section id="projects" class="min-h-screen flex items-center bg-white py-20 relative">
  <div class="max-w-7xl w-full mx-auto px-4 md:px-8 h-[700px]"> 
    {/* Main Container - Rounded & Overflow Hidden */}
    <div class="flex flex-col md:flex-row w-full h-full rounded-3xl overflow-hidden shadow-2xl border border-gray-100 bg-gray-900">
      
      {/* LEFT: Featured Project Display */}
      <div class="flex-[2.5] relative h-full bg-gray-800">
        {projects.map((project, index) => (
          <article 
            class={`featured-card absolute inset-0 transition-opacity duration-500 ease-in-out ${index === 0 ? 'opacity-100 z-10' : 'opacity-0 z-0 pointer-events-none'}`}
            data-index={index}
          >
            {/* Background Image/Gradient */}
            <div class="absolute inset-0 overflow-hidden">
               {typeof project.image === 'string' ? (
                <div class={`w-full h-full bg-cover bg-center ${project.image}`} />
              ) : project.image ? (
                 <Image 
                  src={project.image} 
                  alt={project.title}
                  class="w-full h-full object-cover !w-full !h-full !rounded-none"
                  width={1280}
                  height={720}
                />
              ) : (
                <div class="w-full h-full bg-gradient-to-br from-gray-800 to-gray-900"></div>
              )}
              {/* Overlay */}
              <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/40 to-transparent"></div>
            </div>

            {/* Content Content - Bottom Aligned */}
            <div class="absolute inset-0 p-8 md:p-12 flex flex-col justify-end text-white">
              <div class="transform translate-y-0 transition-all duration-500 delay-100">
                <div class="flex flex-wrap items-center gap-3 mb-4">
                  <span class="px-3 py-1 bg-red-600 text-white text-xs font-bold uppercase tracking-wider rounded-full">
                    {project.category}
                  </span>
                  {project.tags.slice(0, 10).map(tag => (
                     <span class="text-xs text-gray-300 font-medium border border-white/20 px-2 py-0.5 rounded-full">
                       {tag}
                     </span>
                  ))}
                </div>

                <h3 class="text-4xl md:text-5xl font-bold mb-6 leading-tight !text-white">
                  {project.link ? (
                    <a href={project.link} target="_blank" class="underline decoration-white decoration-2 underline-offset-8 transition-all !text-white hover:text-gray-200">
                      {project.title}
                    </a>
                  ) : (
                    project.title
                  )}
                </h3>
                
                <p class="text-lg text-gray-200 mb-8 max-w-xl leading-relaxed">
                  {project.description}
                </p>
              </div>
            </div>
          </article>
        ))}
      </div>

      {/* RIGHT: Scrollable Project List */}
      <div class="flex-1 flex flex-col h-full bg-gray-900 overflow-hidden border-l border-white/10 relative group/list">
        
        {/* Scroll Indicator TOP (Hidden initially) */}
        <div id="scroll-indicator-top" class="absolute top-0 left-0 right-0 h-24 bg-gradient-to-b from-gray-900 via-gray-900/80 to-transparent pointer-events-none z-30 flex flex-col-reverse items-center justify-start pt-6 transition-opacity duration-300 opacity-0">
          <button id="btn-scroll-top" class="pointer-events-auto cursor-pointer flex flex-col-reverse items-center group/btn transition-transform hover:scale-110 active:scale-95">
            <span class="text-[10px] font-bold tracking-[0.2em] text-white mt-2 uppercase animate-pulse group-hover/btn:text-red-400 transition-colors">Up</span>
            <div class="animate-bounce p-2 rounded-full bg-red-600/20 backdrop-blur-sm border border-red-500/30 group-hover/btn:bg-red-600/30 group-hover/btn:border-red-500 transition-all">
              <svg class="w-6 h-6 text-red-500 transform rotate-180 group-hover/btn:text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
              </svg>
            </div>
          </button>
        </div>

        <div id="project-list-container" class="flex-1 overflow-y-auto custom-scrollbar relative z-10">
          {projects.map((project, index) => (
            <div 
              class={`project-list-item relative w-full h-[33.33%] min-h-[200px] border-b border-white/10 transition-all duration-300 group cursor-pointer ${index === 0 ? 'bg-white/5' : 'hover:bg-white/5'}`}
              data-index={index}
              role="button"
              aria-label={`Select project: ${project.title}`}
            >
              {/* Selection Indicator */}
              <div class={`absolute left-0 top-0 bottom-0 w-1.5 z-20 transition-colors ${index === 0 ? 'bg-red-500' : 'bg-transparent group-hover:bg-white/20'}`}></div>

              {/* Image Background */}
              <div class="absolute inset-0 pointer-events-none opacity-60 group-hover:opacity-100 transition-opacity duration-300 overflow-hidden">
                 {typeof project.image === 'string' ? (
                  <div class={`w-full h-full bg-cover bg-center ${project.image}`} />
                ) : project.image ? (
                   <Image 
                    src={project.image} 
                    alt={project.title}
                    class="w-full h-full object-cover !w-full !h-full !rounded-none"
                    width={400}
                    height={200}
                  />
                ) : (
                  <div class="w-full h-full bg-gradient-to-br from-gray-700 to-gray-800"></div>
                )}
              </div>

              {/* Dark Overlay */}
              <div class="absolute inset-0 bg-black/50 group-hover:bg-black/30 transition-colors duration-300 pointer-events-none"></div>

              {/* Content */}
              <div class="absolute inset-0 p-6 flex flex-col justify-end text-left pointer-events-none">
                <div class="transform translate-y-2 group-hover:translate-y-0 transition-transform duration-300 pointer-events-auto">
                  <span class="text-xs font-bold text-white/80 uppercase tracking-wider block mb-2">
                    {project.category}
                  </span>
                  <h4 class="text-lg font-bold !text-white leading-tight line-clamp-2">
                    {project.link ? (
                      <a href={project.link} target="_blank" class="underline decoration-white/50 hover:decoration-white decoration-2 underline-offset-4 hover:text-gray-100 transition-all !text-white" onclick="event.stopPropagation()">
                        {project.title}
                      </a>
                    ) : (
                      project.title
                    )}
                  </h4>
                </div>
              </div>
            </div>
          ))}
        </div>
        
        {/* Scroll Indicator BOTTOM */}
        <div id="scroll-indicator-bottom" class="absolute bottom-0 left-0 right-0 h-28 bg-gradient-to-t from-gray-900 via-gray-900/80 to-transparent pointer-events-none z-20 flex flex-col items-center justify-end pb-6 transition-opacity duration-300">
          <button id="btn-scroll-bottom" class="pointer-events-auto cursor-pointer flex flex-col items-center group/btn transition-transform hover:scale-110 active:scale-95">
            <span class="text-[10px] font-bold tracking-[0.2em] text-white mb-2 uppercase animate-pulse group-hover/btn:text-red-400 transition-colors">Scroll</span>
            <div class="animate-bounce p-2 rounded-full bg-red-600/20 backdrop-blur-sm border border-red-500/30 group-hover/btn:bg-red-600/30 group-hover/btn:border-red-500 transition-all">
              <svg class="w-6 h-6 text-red-500 group-hover/btn:text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
              </svg>
            </div>
          </button>
        </div>
      </div>

    </div>
  </div>
</section>

<style>
  /* Hide scrollbar for the list */
  .custom-scrollbar {
    -ms-overflow-style: none;  /* IE and Edge */
    scrollbar-width: none;  /* Firefox */
  }
  .custom-scrollbar::-webkit-scrollbar {
    display: none;
  }
</style>

<script>
  const setupProjects = () => {
    const listItems = document.querySelectorAll('.project-list-item');
    const cards = document.querySelectorAll('.featured-card');
    
    // Scroll Logic
    const listContainer = document.getElementById('project-list-container');
    const topInd = document.getElementById('scroll-indicator-top');
    const botInd = document.getElementById('scroll-indicator-bottom');

    const btnTop = document.getElementById('btn-scroll-top');
    const btnBot = document.getElementById('btn-scroll-bottom');

    // Click Handlers for Smooth Scroll
    if (btnTop && listContainer) {
      btnTop.addEventListener('click', () => {
        listContainer.scrollTo({ top: 0, behavior: 'smooth' });
      });
    }

    if (btnBot && listContainer) {
      btnBot.addEventListener('click', () => {
        listContainer.scrollTo({ top: listContainer.scrollHeight, behavior: 'smooth' });
      });
    }

    if (listContainer && topInd && botInd) {
      listContainer.addEventListener('scroll', () => {
        const { scrollTop, scrollHeight, clientHeight } = listContainer;
        
        // Show/Hide Top Indicator
        if (scrollTop > 20) {
          topInd.classList.remove('opacity-0');
        } else {
          topInd.classList.add('opacity-0');
        }

        // Show/Hide Bottom Indicator
        // Use a small buffer (20px) to detect near-bottom
        if (Math.abs(scrollHeight - clientHeight - scrollTop) < 20) {
           botInd.classList.add('opacity-0');
        } else {
           botInd.classList.remove('opacity-0');
        }
      });
    }

    listItems.forEach(item => {
      item.addEventListener('click', () => {
        const index = item.getAttribute('data-index');
        
        // Update List UI
        listItems.forEach(li => {
          // Reset background
          li.classList.remove('bg-white/5');
          li.classList.add('hover:bg-white/5');
          
          // Reset indicator (first child)
          const indicator = li.querySelector('div:first-child');
          if (indicator) {
            indicator.classList.remove('bg-red-500');
            indicator.classList.add('bg-transparent', 'group-hover:bg-white/20');
          }
        });

        // Set Active State
        item.classList.remove('hover:bg-white/5');
        item.classList.add('bg-white/5');
        
        const activeIndicator = item.querySelector('div:first-child');
        if (activeIndicator) {
          activeIndicator.classList.remove('bg-transparent', 'group-hover:bg-white/20');
          activeIndicator.classList.add('bg-red-500');
        }

        // Update Featured Card UI
        cards.forEach(card => {
          if (card.getAttribute('data-index') === index) {
            card.classList.remove('opacity-0', 'z-0', 'pointer-events-none');
            card.classList.add('opacity-100', 'z-10');
          } else {
            card.classList.remove('opacity-100', 'z-10');
            card.classList.add('opacity-0', 'z-0', 'pointer-events-none');
          }
        });
      });
    });
  };

  // Run on load
  setupProjects();

  // Run on view transitions navigation
  document.addEventListener('astro:page-load', setupProjects);
</script>

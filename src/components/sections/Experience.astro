---
interface ExperienceItem {
  title: string;
  company: string;
  period: string;
  description: string[];
}

interface Props {
  title: string;
  items: ExperienceItem[];
  itemsKo: ExperienceItem[];
}

const { title, items, itemsKo } = Astro.props;
---

<section class="w-full px-6 md:px-0">
  <h2 class="text-2xl font-mono font-bold text-gray-900 dark:text-white mb-0 tracking-tight flex items-center gap-2">
    {title}<span class="text-red-600 mr-1">:</span>
  </h2>
  <div class="h-12 w-full"></div>

  <div class="space-y-12">
    
    {/* English Content */}
    <div class="lang-en">
      {items.map((item) => (
        <div class="group">
          <div class="flex flex-col sm:flex-row sm:items-baseline sm:justify-between mb-2">
            <span class="text-3xl font-bold text-gray-900 dark:text-white">
              <span class="mr-2 text-red-600">-</span>{item.title}<span class="text-red-600 ml-1">:</span>
            </span>
            <span class="text-sm font-mono text-gray-500 dark:text-gray-400 mt-1 sm:mt-0">{item.period}</span>
          </div>
          
          <div class="text-base font-medium text-gray-700 dark:text-gray-300 mb-4 pl-6">
            {item.company}
          </div>

          <ul class="space-y-2 pl-6">
            {item.description.map(desc => (
              <li class="text-gray-600 dark:text-gray-300 text-sm leading-relaxed relative pl-4">
                <span class="absolute left-0 top-2 w-1 h-1 rounded-full bg-gray-300"></span>
                {desc}
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    {/* Korean Content */}
    <div class="lang-ko">
      {itemsKo.map((item) => (
        <div class="mb-3 group">
          <div class="flex flex-col sm:flex-row sm:items-baseline sm:justify-between mb-2">
            <span class="text-3xl font-bold text-gray-900 dark:text-white">
              <span class="mr-2 text-red-600">-</span>{item.title}<span class="text-red-600 ml-1">:</span>
            </span>
            <span class="text-sm font-mono text-gray-500 dark:text-gray-400 mt-1 sm:mt-0">{item.period}</span>
          </div>
          
          <div class="text-base font-medium text-gray-700 mb-4 pl-6">
            {item.company}
          </div>

          <ul class="space-y-2 pl-6">
            {item.description.map(desc => (
              <li class="text-gray-600 dark:text-gray-300 text-sm leading-relaxed relative pl-4">
                <span class="absolute left-0 top-2 w-1 h-1 rounded-full bg-gray-300"></span>
                {desc}
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

  </div>
</section>

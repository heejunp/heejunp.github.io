---
interface ExperienceItem {
  title: string;
  company: string;
  period: string;
  description: string[];
}

interface Props {
  title: string;
  items: ExperienceItem[];
  itemsKo: ExperienceItem[];
}

const { title, items, itemsKo } = Astro.props;
---

<section class="w-full">
  <h2 class="text-2xl font-mono font-bold text-gray-900 mb-0 tracking-tight flex items-center gap-2 px-6 md:px-0">
    {title}<span class="text-red-600 mr-1">:</span>
  </h2>
  <div class="h-12 w-full"></div>

  <div class="relative border-l border-gray-200 ml-6 md:ml-0 space-y-12">
    
    {/* English Content */}
    <div class="lang-en">
      {items.map((item) => (
        <div class="relative pl-8 md:pl-12 group">
          {/* Dot */}
          <div class="absolute -left-[5px] top-2 w-[9px] h-[9px] rounded-full bg-gray-300 group-hover:bg-red-600 transition-colors duration-300 ring-4 ring-white"></div>
          
          <div class="flex flex-col sm:flex-row sm:items-baseline sm:justify-between mb-2">
            <h3 class="text-xl font-bold text-gray-900 group-hover:text-red-600 transition-colors duration-300">
              {item.title}
            </h3>
            <span class="text-sm font-mono text-gray-400 mt-1 sm:mt-0">{item.period}</span>
          </div>
          
          <div class="text-base font-medium text-gray-700 mb-4">
            {item.company}
          </div>

          <ul class="space-y-2">
            {item.description.map(desc => (
              <li class="text-gray-500 text-sm leading-relaxed relative pl-4">
                <span class="absolute left-0 top-2 w-1 h-1 rounded-full bg-gray-300"></span>
                {desc}
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    {/* Korean Content */}
    <div class="lang-ko">
      {itemsKo.map((item) => (
        <div class="relative pl-8 md:pl-12 mb-3 group">
          {/* Dot */}
          <div class="absolute -left-[5px] top-2 w-[9px] h-[9px] rounded-full bg-gray-300 group-hover:bg-red-600 transition-colors duration-300 ring-4 ring-white"></div>
          
          <div class="flex flex-col sm:flex-row sm:items-baseline sm:justify-between mb-2">
            <h3 class="text-xl font-bold text-gray-900 group-hover:text-red-600 transition-colors duration-300">
              {item.title}
            </h3>
            <span class="text-sm font-mono text-gray-400 mt-1 sm:mt-0">{item.period}</span>
          </div>
          
          <div class="text-base font-medium text-gray-700 mb-4">
            {item.company}
          </div>

          <ul class="space-y-2">
            {item.description.map(desc => (
              <li class="text-gray-500 text-sm leading-relaxed relative pl-4">
                <span class="absolute left-0 top-2 w-1 h-1 rounded-full bg-gray-300"></span>
                {desc}
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

  </div>
</section>

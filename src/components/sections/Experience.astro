---
interface ExperienceItem {
  title: string;
  company: string;
  period: string;
  description: string[];
}

interface Props {
  title: string;
  items: ExperienceItem[];
}

const { title, items } = Astro.props;
---

<section class="max-w-4xl mx-auto px-6 py-8">
  <h2 class="text-2xl font-mono font-bold text-gray-900 mb-0 tracking-tight flex items-center gap-2">
    {title}<span class="text-red-600 mr-1">:</span>
  </h2>
  <div class="h-16 w-full"></div>
  <div class="space-y-12">
    {items.map((item) => (
      <div class="grid grid-cols-1 md:grid-cols-[200px_1fr] gap-4">
        <div class="text-sm text-gray-500 font-medium pt-1">
          {item.period}
        </div>
        <div>
          <span class="text-2xl font-bold font-mono text-gray-900 mb-1 flex items-center gap-2">
            <span class="text-red-600">-</span>{item.title}<span class="text-red-600">:</span>
          </span>
          <p class="text-gray-700 font-medium mb-3">{item.company}</p>
          <ul class="list-disc list-outside ml-4 space-y-1 text-gray-600 leading-relaxed">
            {item.description.map((desc) => (
              <span>{desc}</span>
            ))}
          </ul>
        </div>
      </div>
    ))}
  </div>
</section>

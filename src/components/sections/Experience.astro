---
interface ExperienceItem {
  title: string;
  company: string;
  period: string;
  description: string[];
}

interface Props {
  title: string;
  items: ExperienceItem[];
}

const { title, items } = Astro.props;
---

<section class="max-w-3xl mx-auto px-4 py-8">
  <h2 class="text-2xl font-bold text-gray-900 mb-8 border-b border-gray-200 pb-2">{title}</h2>
  <div class="space-y-12">
    {items.map((item) => (
      <div class="grid grid-cols-1 md:grid-cols-[200px_1fr] gap-4">
        <div class="text-sm text-gray-500 font-medium pt-1">
          {item.period}
        </div>
        <div>
          <h3 class="text-xl font-bold text-gray-900 mb-1">{item.title}</h3>
          <p class="text-gray-700 font-medium mb-3">{item.company}</p>
          <ul class="list-disc list-outside ml-4 space-y-1 text-gray-600 leading-relaxed">
            {item.description.map((desc) => (
              <li>{desc}</li>
            ))}
          </ul>
        </div>
      </div>
    ))}
  </div>
</section>

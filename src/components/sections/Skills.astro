---
import { TECH_TAGS } from '../../consts/tags';

const skills = {
  strong: [
    TECH_TAGS.JAVA,
    TECH_TAGS.SPRING_BOOT,
    TECH_TAGS.KUBERNETES,
    TECH_TAGS.JENKINS,
    TECH_TAGS.MYSQL,
    TECH_TAGS.DOCKER,
    TECH_TAGS.AWS,
    TECH_TAGS.NGINX,
    TECH_TAGS.LINUX,
  ],
  knowledgeable: [
    TECH_TAGS.GO,
    TECH_TAGS.CPP,
    TECH_TAGS.PYTHON,
    TECH_TAGS.TYPESCRIPT,
    TECH_TAGS.VUEJS,
    TECH_TAGS.SVELTEKIT,
    TECH_TAGS.TAILWIND_CSS,
    TECH_TAGS.REDIS,
    TECH_TAGS.RABBITMQ,
    TECH_TAGS.GITHUB_ACTIONS,
    TECH_TAGS.ARGOCD,
    TECH_TAGS.POSTGRESQL,
  ],
  etc: [
    TECH_TAGS.THREEJS,
    TECH_TAGS.WEBRTC,
    TECH_TAGS.OPENAI,
    TECH_TAGS.OCR,
    TECH_TAGS.FACENET,
  ]
};
---

<section id="skills" class="min-h-screen flex items-center justify-center py-20 bg-white dark:bg-gray-900 transition-colors duration-300">
  <div class="max-w-4xl mx-auto px-6 w-full">
    <h2 class="text-2xl font-mono font-bold text-gray-900 dark:text-white mb-0 tracking-tight flex items-center gap-2">
      Skills<span class="text-red-600 mr-1">:</span>
    </h2>
    <div class="h-12 w-full"></div>

    <div class="space-y-12 mb-20">
      
      {/* Strong */}
      <div class="pl-6">
        <span class="text-3xl font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2 font-mono">
          <span class="text-red-600">-</span>Strong<span class="text-red-600 mr-1">:</span>
        </span>
        <div class="flex flex-wrap gap-2">
          {skills.strong.map((skill) => (
            <span class="px-4 py-2 bg-white dark:bg-gray-800 text-gray-800 dark:text-gray-200 rounded-lg text-sm font-medium border border-gray-200 dark:border-gray-700 hover:border-red-500 dark:hover:border-red-500 hover:text-red-600 transition-colors cursor-default shadow-sm">
              {skill}
            </span>
          ))}
        </div>
      </div>

      {/* Knowledgeable */}
      <div class="pl-6">
        <span class="text-3xl font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2 font-mono">
          <span class="text-red-600">-</span>Knowledgeable<span class="text-red-600 mr-1">:</span>
        </span>
        <div class="flex flex-wrap gap-2">
          {skills.knowledgeable.map((skill) => (
            <span class="px-4 py-2 bg-white dark:bg-gray-800 text-gray-800 dark:text-gray-200 rounded-lg text-sm font-medium border border-gray-200 dark:border-gray-700 hover:border-red-500 dark:hover:border-red-500 hover:text-red-600 transition-colors cursor-default shadow-sm">
              {skill}
            </span>
          ))}
        </div>
      </div>

      {/* ETC */}
      <div class="pl-6">
        <span class="text-3xl font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2 font-mono">
          <span class="text-red-600">-</span>ETC<span class="text-red-600 mr-1">:</span>
        </span>
        <div class="flex flex-wrap gap-2">
          {skills.etc.map((skill) => (
            <span class="px-4 py-2 bg-white dark:bg-gray-800 text-gray-800 dark:text-gray-200 rounded-lg text-sm font-medium border border-gray-200 dark:border-gray-700 hover:border-red-500 dark:hover:border-red-500 hover:text-red-600 transition-colors cursor-default shadow-sm">
              {skill}
            </span>
          ))}
        </div>
      </div>

    </div>
  </div>
</section>

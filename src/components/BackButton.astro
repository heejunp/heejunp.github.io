---
interface Props {
	href?: string;
	text?: string;
}

const { href = '/?skipIntro=true', text = '뒤로' } = Astro.props;
---

<a href={href} class="back-button">
	<span class="back-arrow">←</span>
	<span class="back-text">{text}</span>
</a>

<style>
	.back-button {
		position: fixed;
		bottom: var(--spacing-lg);
		right: var(--spacing-lg);
		display: flex;
		align-items: center;
		gap: var(--spacing-xs);
		padding: var(--spacing-sm) var(--spacing-md);
		background: var(--color-nebula-green);
		border: var(--border-width) solid var(--color-primary);
		color: var(--color-primary);
		text-decoration: none;
		font-family: var(--font-family-mono);
		font-weight: 700;
		font-size: 1.2rem;
		z-index: var(--z-header);
		transition: all var(--transition-base);
		box-shadow: var(--shadow-offset) var(--shadow-offset) 0 0 var(--color-primary);
	}

	.back-button:hover {
		background: var(--color-nebula-green-medium);
		transform: translate(-2px, -2px);
		box-shadow: var(--shadow-offset-lg) var(--shadow-offset-lg) 0 0 var(--color-primary);
	}

	.back-button:active {
		transform: translate(2px, 2px);
		box-shadow: var(--shadow-offset-sm) var(--shadow-offset-sm) 0 0 var(--color-primary);
	}

	.back-arrow {
		font-size: 1.5rem;
		line-height: 1;
	}

	.back-text {
		text-shadow: var(--shadow-offset-sm) var(--shadow-offset-sm) 0 var(--color-shadow-dark);
	}

	/* 모바일 반응형 */
	@media (max-width: 768px) {
		.back-button {
			bottom: var(--spacing-sm);
			right: var(--spacing-sm);
			padding: 0.75rem var(--spacing-sm);
			font-size: 1rem;
		}
	}
</style>

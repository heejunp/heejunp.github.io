---
import { cn } from '../../lib/cn';
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

interface Props {
  name: string;
  role: string;
  description: string;
  githubUrl?: string;
  blogUrl?: string;
  email?: string;
  profileImage?: ImageMetadata;
}

const { name, role, description, githubUrl, blogUrl, email, profileImage } = Astro.props;
---

<header class="max-w-3xl mx-auto px-4 py-20">
  <div class="flex flex-col-reverse md:flex-row gap-8 md:items-start justify-between">
    <div class="flex-1">
      <h1 class="text-5xl font-bold text-gray-900 mb-4 tracking-tight">{name}</h1>
      <p class="text-xl text-gray-600 font-medium mb-6">{role}</p>
      <p class="text-lg text-gray-700 leading-relaxed mb-8 max-w-xl">
        {description}
      </p>
      
      <div class="flex flex-wrap gap-6 text-sm font-medium text-gray-600">
        {githubUrl && (
          <a 
            href={githubUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-2 hover:text-black transition-colors duration-200"
            aria-label="GitHub"
          >
            <svg viewBox="0 0 24 24" width="20" height="20" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
            </svg>
            <span>GitHub</span>
          </a>
        )}
        
        {blogUrl && (
          <a 
            href={blogUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-2 hover:text-black transition-colors duration-200"
            aria-label="Blog"
          >
            <svg viewBox="0 0 24 24" width="20" height="20" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path>
              <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path>
            </svg>
            <span>Blog</span>
          </a>
        )}

        {email && (
          <a 
            href={`mailto:${email}`}
            class="flex items-center gap-2 hover:text-black transition-colors duration-200"
            aria-label="Email"
          >
            <svg viewBox="0 0 24 24" width="20" height="20" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
            <span>{email}</span>
          </a>
        )}
      </div>
    </div>

    {profileImage && (
      <div class="flex-shrink-0">
        <Image 
          src={profileImage} 
          alt={name} 
          class="w-48 h-48 md:w-64 md:h-64 rounded-2xl object-cover shadow-sm border border-gray-100 image-rendering-pixelated"
          width={512}
          height={512}
        />
      </div>
    )}
  </div>
</header>

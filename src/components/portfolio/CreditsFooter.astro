---
// 영화 크레딧 스타일 푸터 컴포넌트

interface TechStack {
	name: string;
	icon?: string;
}

const techStacks: TechStack[] = [
	{ name: 'JavaScript' },
	{ name: 'TypeScript' },
	{ name: 'React' },
	{ name: 'Vue.js' },
	{ name: 'Astro' },
	{ name: 'Next.js' },
	{ name: 'Node.js' },
	{ name: 'HTML5' },
	{ name: 'CSS3' },
	{ name: 'SASS' },
	{ name: 'Tailwind CSS' },
	{ name: 'Git' },
	{ name: 'GitHub' },
	{ name: 'Figma' },
	{ name: 'VS Code' },
];
---

<section class="credits-footer">
	<div class="credits-container">
		<div class="credits-content">
			<h2 class="credits-title">기술 스택</h2>
			<div class="credits-scroll-wrapper">
				<div class="tech-list">
					{/* 첫 번째 세트 */}
					{techStacks.map((tech, index) => (
						<div class="tech-item">
							<span class="tech-name">{tech.name}</span>
						</div>
					))}
					{/* 두 번째 세트 (무한 루프를 위해) */}
					{techStacks.map((tech, index) => (
						<div class="tech-item">
							<span class="tech-name">{tech.name}</span>
						</div>
					))}
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	.credits-footer {
		background: #0f3460;
		color: #ffffff;
		padding: 2rem;
		position: relative;
		overflow: hidden;
		min-height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.credits-footer::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background-image: 
			radial-gradient(circle, #00ff41 1px, transparent 1px);
		background-size: 30px 30px;
		opacity: 0.1;
		pointer-events: none;
		animation: dotMove 15s linear infinite;
	}

	@keyframes dotMove {
		0% { background-position: 0 0; }
		100% { background-position: 30px 30px; }
	}

	.credits-container {
		max-width: 1200px;
		width: 100%;
		position: relative;
		z-index: 1;
	}

	.credits-content {
		text-align: center;
		width: 100%;
		max-width: 1200px;
		position: relative;
		z-index: 1;
	}

	.credits-title {
		font-size: clamp(2rem, 4vw, 3rem);
		font-weight: 700;
		margin: 0 0 2rem 0;
		color: #00ff41;
		text-transform: uppercase;
		letter-spacing: 0.2em;
		font-family: 'Courier New', monospace;
		text-shadow: 
			4px 4px 0 #16213e,
			8px 8px 0 #1a1a2e;
		position: relative;
		z-index: 2;
	}

	.credits-scroll-wrapper {
		height: 70vh;
		overflow: hidden;
		position: relative;
		border: 3px solid #00ff41;
	}

	.credits-scroll-wrapper::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		pointer-events: none;
		background: linear-gradient(
			to bottom,
			rgba(15, 52, 96, 1) 0%,
			transparent 10%,
			transparent 90%,
			rgba(15, 52, 96, 1) 100%
		);
		z-index: 1;
	}

	.credits-scroll-wrapper:hover .tech-list {
		animation-play-state: paused;
	}

	@keyframes fadeIn {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.tech-list {
		display: flex;
		flex-direction: column;
		gap: 2rem;
		align-items: center;
		justify-content: flex-start;
		animation: scroll-up 20s linear infinite;
		padding: 2rem 0;
		position: relative;
		z-index: 0;
	}

	@keyframes scroll-up {
		0% {
			transform: translateY(50%);
		}
		100% {
			transform: translateY(-50%);
		}
	}

	.tech-item {
		font-size: clamp(1.2rem, 2vw, 1.8rem);
		color: #ffd700;
		text-shadow: 
			2px 2px 0 #16213e,
			4px 4px 0 #1a1a2e;
		transition: all 0.1s ease;
		font-family: 'Courier New', monospace;
		font-weight: 700;
		position: relative;
		white-space: nowrap;
	}

	.tech-item:hover {
		color: #00ff41;
		transform: scale(1.1);
		text-shadow: 
			3px 3px 0 #16213e,
			6px 6px 0 #1a1a2e;
	}

	.tech-name {
		display: inline-block;
		font-weight: 300;
		letter-spacing: 0.1em;
		position: relative;
	}

	.tech-name::before {
		content: '▶';
		margin-right: 1rem;
		color: #00ff41;
		font-size: 0.8em;
	}

	.credits-end {
		margin-top: 3rem;
		padding-top: 3rem;
		border-top: 3px solid #00ff41;
		width: 100%;
		text-align: center;
		position: relative;
		z-index: 2;
	}

	.credits-text {
		font-size: clamp(1rem, 1.5vw, 1.2rem);
		color: #e94560;
		margin: 0 0 1rem 0;
		letter-spacing: 0.05em;
		font-family: 'Courier New', monospace;
		text-shadow: 1px 1px 0 #16213e;
		position: relative;
	}

	.credits-year {
		font-size: clamp(0.9rem, 1.2vw, 1rem);
		color: #00ff41;
		margin: 0;
		letter-spacing: 0.1em;
		font-family: 'Courier New', monospace;
		text-shadow: 2px 2px 0 #16213e;
		position: relative;
	}

	/* 애니메이션 감소 모션 설정 */
	@media (prefers-reduced-motion: reduce) {
		.tech-list {
			animation: none;
		}
	}

	/* 모바일 반응형 */
	@media (max-width: 640px) {
		.credits-footer {
			padding: 2rem 1rem;
		}

		.credits-scroll-wrapper {
			height: 60vh;
		}

		.tech-list {
			gap: 1.5rem;
		}

		.credits-end {
			margin-top: 3rem;
			padding-top: 3rem;
		}
	}
</style>

---
// 타임라인 섹션 컴포넌트

interface TimelineItem {
	year: string;
	title: string;
	description: string;
	type: 'project' | 'experience';
}

const timelineItems: TimelineItem[] = [
	{
		year: '2024',
		title: '포트폴리오 웹사이트',
		description: 'Astro를 활용한 모던한 포트폴리오 웹사이트 개발',
		type: 'project'
	},
	{
		year: '2023',
		title: 'React 프로젝트',
		description: '사용자 친화적인 인터페이스를 가진 웹 애플리케이션 개발',
		type: 'project'
	},
	{
		year: '2022',
		title: '프론트엔드 개발자',
		description: '다양한 프로젝트를 통해 프론트엔드 개발 역량 강화',
		type: 'experience'
	},
	{
		year: '2021',
		title: '첫 프로젝트',
		description: '웹 개발의 첫걸음을 시작한 의미 있는 프로젝트',
		type: 'project'
	}
];
---

<section class="timeline-section">
	<div class="timeline-container">
		<h2 class="section-title">Timeline</h2>
		<div class="timeline-wrapper">
			<div class="timeline-line"></div>
		{timelineItems.map((item, index) => (
			<div class={`timeline-item ${index % 2 === 0 ? 'left' : 'right'}`} data-index={index}>
				<div class="timeline-card">
					<div class="timeline-year">{item.year}</div>
					<h3 class="timeline-title">{item.title}</h3>
					<p class="timeline-description">{item.description}</p>
					<div class={`timeline-badge ${item.type}`}>
						{item.type === 'project' ? '프로젝트' : '연혁'}
					</div>
				</div>
				<div class="timeline-dot"></div>
			</div>
		))}
		</div>
	</div>
</section>

<style>
	.timeline-section {
		padding: calc(var(--spacing-xl) * 2) var(--spacing-lg);
		background: var(--color-bg-dark-blue);
		position: relative;
		min-height: 100vh;
	}

	.timeline-section::before {
		content: '';
		position: absolute;
		inset: 0;
		background-image: 
			radial-gradient(circle, var(--color-bg-image) 1px, transparent 1px);
		background-size: 20px 20px;
		opacity: 0.2;
		pointer-events: none;
	}

	.timeline-container {
		max-width: var(--max-blog-width);
		margin: 0 auto;
		position: relative;
	}

	.section-title {
		font-size: clamp(2rem, 4vw, 3rem);
		font-weight: 700;
		text-align: center;
		margin: 0 0 calc(var(--spacing-lg) * 2) 0;
		color: var(--color-primary);
		text-shadow: 
			var(--shadow-offset) var(--shadow-offset) 0 var(--color-bg-image),
			calc(var(--shadow-offset) * 2) calc(var(--shadow-offset) * 2) 0 var(--color-bg-darker-blue);
		font-family: var(--font-family-mono);
		letter-spacing: 0.1em;
		position: relative;
		z-index: var(--z-base);
	}

	.timeline-wrapper {
		position: relative;
		padding: var(--spacing-lg) 0;
	}

	.timeline-line {
		position: absolute;
		left: 50%;
		top: 0;
		bottom: 0;
		width: 4px;
		background: repeating-linear-gradient(
			to bottom,
			var(--color-primary) 0px,
			var(--color-primary) 10px,
			transparent 10px,
			transparent 20px
		);
		transform: translateX(-50%);
		box-shadow: 0 0 10px var(--color-nebula-gold-strong);
	}

	.timeline-item {
		position: relative;
		margin-bottom: calc(var(--spacing-lg) * 2);
		display: flex;
		align-items: center;
		opacity: 0;
		transform: translateY(50px);
		transition: opacity 0.8s ease-out, transform 0.8s ease-out;
	}

	.timeline-item.visible {
		opacity: 1;
		transform: translateY(0);
	}

	.timeline-item:nth-child(1) { transition-delay: 0.1s; }
	.timeline-item:nth-child(2) { transition-delay: 0.2s; }
	.timeline-item:nth-child(3) { transition-delay: 0.3s; }
	.timeline-item:nth-child(4) { transition-delay: 0.4s; }

	.timeline-item.left {
		justify-content: flex-end;
		padding-right: calc(50% + var(--spacing-lg));
	}

	.timeline-item.right {
		justify-content: flex-start;
		padding-left: calc(50% + var(--spacing-lg));
	}

	.timeline-card {
		background: var(--color-bg-darker-blue);
		border: var(--border-width) solid var(--color-primary);
		border-radius: 0;
		padding: var(--spacing-lg);
		max-width: 500px;
		width: 100%;
		position: relative;
		transition: all var(--transition-fast);
		box-shadow: 
			0 0 0 2px var(--color-bg-dark-blue),
			calc(var(--shadow-offset) * 2) calc(var(--shadow-offset) * 2) 0 0 var(--color-primary);
	}

	.timeline-card:hover {
		transform: translate(-2px, -2px);
		box-shadow: 
			0 0 0 2px var(--color-bg-dark-blue),
			calc(var(--shadow-offset-lg) + 2px) calc(var(--shadow-offset-lg) + 2px) 0 0 var(--color-primary);
	}

	.timeline-year {
		font-size: 0.9rem;
		color: var(--color-secondary);
		font-weight: 700;
		margin-bottom: var(--spacing-xs);
		letter-spacing: 0.1em;
		font-family: var(--font-family-mono);
		text-shadow: var(--shadow-offset-sm) var(--shadow-offset-sm) 0 var(--color-bg-image);
	}

	.timeline-title {
		font-size: clamp(1.2rem, 2vw, 1.5rem);
		color: var(--color-primary);
		margin: 0 0 0.75rem 0;
		font-weight: 700;
		font-family: var(--font-family-mono);
		text-shadow: var(--shadow-offset-sm) var(--shadow-offset-sm) 0 var(--color-bg-image);
	}

	.timeline-description {
		font-size: 1rem;
		color: #e94560;
		line-height: 1.6;
		margin: 0 0 var(--spacing-sm) 0;
		font-family: var(--font-family-mono);
		text-shadow: 1px 1px 0 var(--color-bg-image);
	}

	.timeline-badge {
		display: inline-block;
		padding: 0.25rem 0.75rem;
		border-radius: 0;
		font-size: 0.75rem;
		font-weight: 700;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		font-family: var(--font-family-mono);
		border: var(--border-width-medium) solid;
	}

	.timeline-badge.project {
		background: var(--color-bg-darker-blue);
		color: var(--color-primary);
		border-color: var(--color-primary);
		box-shadow: var(--shadow-offset-sm) var(--shadow-offset-sm) 0 0 var(--color-primary);
	}

	.timeline-badge.experience {
		background: var(--color-bg-darker-blue);
		color: var(--color-secondary);
		border-color: var(--color-secondary);
		box-shadow: var(--shadow-offset-sm) var(--shadow-offset-sm) 0 0 var(--color-secondary);
	}

	.timeline-dot {
		position: absolute;
		left: 50%;
		width: 20px;
		height: 20px;
		border-radius: 0;
		background: var(--color-primary);
		border: var(--border-width) solid var(--color-bg-dark-blue);
		transform: translateX(-50%) rotate(45deg);
		box-shadow: 
			0 0 0 2px var(--color-primary),
			0 0 10px var(--color-nebula-gold-strong);
		z-index: 2;
	}

	/* 모바일 반응형 */
	@media (max-width: 968px) {
		.timeline-line {
			left: var(--spacing-lg);
		}

		.timeline-item.left,
		.timeline-item.right {
			padding-left: calc(var(--spacing-lg) * 2);
			padding-right: 0;
			justify-content: flex-start;
		}

		.timeline-dot {
			left: var(--spacing-lg);
		}

		.timeline-card {
			max-width: 100%;
		}
	}

	@media (max-width: 640px) {
		.timeline-section {
			padding: calc(var(--spacing-lg) * 2) var(--spacing-sm);
		}

		.timeline-card {
			padding: var(--spacing-md);
		}
	}
</style>

<script>
	// Intersection Observer를 사용한 스크롤 애니메이션
	document.addEventListener('DOMContentLoaded', () => {
		const timelineItems = document.querySelectorAll('.timeline-item');
		
		const observerOptions = {
			threshold: 0.2,
			rootMargin: '0px 0px -100px 0px'
		};

		const observer = new IntersectionObserver((entries) => {
			entries.forEach(entry => {
				if (entry.isIntersecting) {
					entry.target.classList.add('visible');
				}
			});
		}, observerOptions);

		timelineItems.forEach(item => {
			observer.observe(item);
		});
	});
</script>

<style>
	/* 도트 패턴 배경 */
	.hero-section {
		min-height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 4rem 2rem;
		background: #1a1a2e;
		position: relative;
		overflow: hidden;
	}

	.hero-section::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background-image: 
			radial-gradient(circle, #0f3460 1px, transparent 1px);
		background-size: 20px 20px;
		background-position: 0 0, 10px 10px;
		opacity: 0.3;
		pointer-events: none;
		animation: dotMove 20s linear infinite;
	}

	@keyframes dotMove {
		0% { background-position: 0 0; }
		100% { background-position: 20px 20px; }
	}

	.hero-container {
		max-width: 1200px;
		width: 100%;
		display: grid;
		grid-template-columns: 1fr 1.5fr;
		gap: 4rem;
		align-items: center;
		position: relative;
		z-index: 1;
	}

	.profile-image-wrapper {
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.profile-image {
		width: 300px;
		height: 300px;
		border-radius: 0;
		overflow: hidden;
		border: 4px solid #00ff41;
		box-shadow: 
			0 0 0 4px #1a1a2e,
			0 0 0 8px #00ff41,
			8px 8px 0 0 #00ff41;
		position: relative;
		image-rendering: pixelated;
		transform: scale(1);
		transition: transform 0.1s ease;
	}

	.profile-image:hover {
		transform: scale(1.05);
		box-shadow: 
			0 0 0 4px #1a1a2e,
			0 0 0 8px #00ff41,
			12px 12px 0 0 #00ff41;
	}

	.profile-placeholder {
		width: 100%;
		height: 100%;
		background: #0f3460;
		display: flex;
		align-items: center;
		justify-content: center;
		image-rendering: pixelated;
	}

	.pixel-art {
		display: grid;
		grid-template-rows: repeat(8, 1fr);
		gap: 0;
		width: 200px;
		height: 200px;
	}

	.pixel-row {
		display: grid;
		grid-template-columns: repeat(8, 1fr);
		gap: 0;
	}

	.pixel {
		width: 100%;
		height: 100%;
		background: transparent;
	}

	.pixel.fill {
		background: #16213e;
	}

	.pixel.fill.accent {
		background: #00ff41;
	}

	.hero-content {
		color: #ffffff;
	}

	.hero-name {
		font-size: clamp(2.5rem, 5vw, 4rem);
		font-weight: 700;
		margin: 0 0 0.5rem 0;
		color: #00ff41;
		line-height: 1.2;
		text-shadow: 
			4px 4px 0 #0f3460,
			8px 8px 0 #16213e;
		font-family: 'Courier New', monospace;
		letter-spacing: 0.05em;
	}

	.hero-title {
		font-size: clamp(1.2rem, 2vw, 1.5rem);
		color: #ffd700;
		margin: 0 0 1.5rem 0;
		font-weight: 700;
		letter-spacing: 0.1em;
		text-shadow: 
			2px 2px 0 #0f3460,
			4px 4px 0 #16213e;
		font-family: 'Courier New', monospace;
	}

	.hero-description {
		font-size: clamp(1rem, 1.5vw, 1.2rem);
		line-height: 1.8;
		color: #e94560;
		margin: 0 0 2rem 0;
		max-width: 600px;
		font-family: 'Courier New', monospace;
		text-shadow: 1px 1px 0 #0f3460;
	}

	.hero-links {
		display: flex;
		gap: 1.5rem;
		flex-wrap: wrap;
	}

	.social-link {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		color: #00ff41;
		text-decoration: none;
		padding: 0.75rem 1.5rem;
		border: 3px solid #00ff41;
		border-radius: 0;
		transition: all 0.1s ease;
		background: #1a1a2e;
		box-shadow: 4px 4px 0 0 #00ff41;
		font-family: 'Courier New', monospace;
		font-weight: 700;
	}

	.social-link:hover {
		transform: translate(-2px, -2px);
		box-shadow: 6px 6px 0 0 #00ff41;
	}

	.social-link:active {
		transform: translate(2px, 2px);
		box-shadow: 2px 2px 0 0 #00ff41;
	}

	.social-link svg {
		fill: currentColor;
	}

	/* 모바일 반응형 */
	@media (max-width: 968px) {
		.hero-container {
			grid-template-columns: 1fr;
			gap: 3rem;
			text-align: center;
		}

		.profile-image {
			width: 250px;
			height: 250px;
		}

		.hero-content {
			display: flex;
			flex-direction: column;
			align-items: center;
		}

		.hero-description {
			text-align: center;
		}
	}

	@media (max-width: 640px) {
		.hero-section {
			padding: 2rem 1rem;
		}

		.profile-image {
			width: 200px;
			height: 200px;
		}
	}
</style>

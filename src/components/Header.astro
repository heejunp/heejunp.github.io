---
interface Props {
  githubUrl?: string;
  blogUrl?: string;
}

const { githubUrl, blogUrl } = Astro.props;

const navItems = [
  { name: 'Projects', href: '#projects' },
  { name: 'About', href: '#about' },
  { name: 'Skills', href: '#skills' },
  { name: 'Experience', href: '#experience' },
  { name: 'Certificates', href: '#certificates' },
];
---

<header class="fixed top-0 left-0 w-full z-50 bg-white/90 backdrop-blur-sm border-b border-gray-100 transition-all duration-300">
  <div class="max-w-6xl mx-auto px-6 h-20 flex items-center justify-between">
    <a href="#" class="group">
      <h1 class="text-xl font-mono font-bold text-gray-900 tracking-tight flex items-center gap-1">
        HeeJunPark<span class="text-red-600 mr-1">:</span>
      </h1>
    </a>

    {/* Desktop Navigation */}
    <nav class="hidden md:flex items-center gap-8">
      <ul class="flex gap-6 items-center">
        {navItems.map((item) => (
          <li>
            <a 
              href={item.href} 
              class="text-sm font-medium !text-black hover:underline decoration-red-600 decoration-2 underline-offset-4 transition-all"
            >
              {item.name}
            </a>
          </li>
        ))}
      </ul>
      
      <span class="text-black mx-2 font-light">|</span>

      <div class="flex gap-4">
        {blogUrl && (
          <a href={blogUrl} target="_blank" aria-label="Blog" class="group relative !text-black transition-colors">
            <svg viewBox="0 0 24 24" class="w-5 h-5" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path>
              <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path>
            </svg>
            <span class="absolute top-full mt-2 left-1/2 -translate-x-1/2 px-2 py-1 bg-gray-800 text-white text-xs rounded opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap pointer-events-none">
              {blogUrl}
            </span>
          </a>
        )}
        {githubUrl && (
          <a href={githubUrl} target="_blank" aria-label="GitHub" class="group relative !text-black transition-colors">
            <svg viewBox="0 0 24 24" class="w-5 h-5" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
            </svg>
             <span class="absolute top-full mt-2 left-1/2 -translate-x-1/2 px-2 py-1 bg-gray-800 text-white text-xs rounded opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap pointer-events-none">
              {githubUrl}
            </span>
          </a>
        )}
      </div>
    </nav>

    {/* Mobile Menu Button */}
    <button id="mobile-menu-btn" class="md:hidden text-black p-2 z-50 relative" aria-label="Toggle Menu">
      <div class="w-6 h-5 flex flex-col justify-between">
        <span class="w-full h-0.5 bg-black transition-all duration-300 origin-left"></span>
        <span class="w-full h-0.5 bg-black transition-all duration-300"></span>
        <span class="w-full h-0.5 bg-black transition-all duration-300 origin-left"></span>
      </div>
    </button>
  </div>

  {/* Mobile Menu Overlay */}
  <div id="mobile-menu" class="fixed inset-0 bg-white z-40 flex flex-col items-center justify-center translate-x-full transition-transform duration-300 md:hidden">
    <nav class="flex flex-col items-center gap-8">
      {navItems.map((item) => (
        <a 
          href={item.href} 
          class="text-2xl font-bold text-black hover:text-red-600 transition-colors mobile-nav-link"
        >
          {item.name}
        </a>
      ))}
      <div class="w-12 h-0.5 bg-gray-200 my-4"></div>
      <div class="flex gap-8">
        {blogUrl && (
          <a href={blogUrl} target="_blank" class="text-black hover:text-red-600 transition-colors">
            Blog
          </a>
        )}
        {githubUrl && (
          <a href={githubUrl} target="_blank" class="text-black hover:text-red-600 transition-colors">
            GitHub
          </a>
        )}
      </div>
    </nav>
  </div>
</header>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuLines = menuBtn?.querySelectorAll('span');
  const mobileLinks = document.querySelectorAll('.mobile-nav-link');
  let isMenuOpen = false;

  const toggleMenu = () => {
    isMenuOpen = !isMenuOpen;
    
    // Toggle Menu Visibility
    if (isMenuOpen) {
      mobileMenu?.classList.remove('translate-x-full');
      document.body.style.overflow = 'hidden'; // Prevent background scrolling
    } else {
      mobileMenu?.classList.add('translate-x-full');
      document.body.style.overflow = '';
    }

    // Animate Hamburger
    if (menuLines && menuLines.length === 3) {
      if (isMenuOpen) {
        menuLines[0].classList.add('rotate-45');
        menuLines[1].classList.add('opacity-0');
        menuLines[2].classList.add('-rotate-45');
      } else {
        menuLines[0].classList.remove('rotate-45');
        menuLines[1].classList.remove('opacity-0');
        menuLines[2].classList.remove('-rotate-45');
      }
    }
  };

  menuBtn?.addEventListener('click', toggleMenu);

  // Close menu when a link is clicked
  mobileLinks.forEach(link => {
    link.addEventListener('click', () => {
      if (isMenuOpen) toggleMenu();
    });
  });
</script>

<style>
  header {
    animation: fadeInDown 0.5s ease-out;
  }
  
  @keyframes fadeInDown {
    from { opacity: 0; transform: translateY(-10px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>

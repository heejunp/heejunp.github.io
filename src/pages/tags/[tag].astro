---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import { Image } from 'astro:assets';

export async function getStaticPaths() {
	const allPosts = await getCollection('blog');
	
	// 모든 태그 수집
	const tagSet = new Set<string>();
	allPosts.forEach((post) => {
		const tags = post.data.tags || [];
		tags.forEach((tag) => tagSet.add(tag));
	});
	
	// 각 태그에 대한 경로 생성
	return Array.from(tagSet).map((tag) => ({
		params: { tag: encodeURIComponent(tag) },
	}));
}

const { tag } = Astro.params;

if (!tag) {
	return Astro.redirect('/');
}

const decodedTag = decodeURIComponent(tag);

// 해당 태그를 가진 모든 글 가져오기
const allPosts = await getCollection('blog');
const taggedPosts = allPosts
	.filter((post) => {
		const tags = post.data.tags || [];
		return tags.includes(decodedTag);
	})
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout title={`태그: ${decodedTag}`} description={`${decodedTag} 태그가 포함된 글 목록`}>
	<style>
		.tag-header {
			padding: 2em 1em;
			text-align: center;
			border-bottom: 2px solid rgb(var(--gray-light));
		}

		.tag-header h1 {
			margin: 0 0 0.5em 0;
			color: var(--accent);
		}

		.tag-header .tag-count {
			color: rgb(var(--gray));
			font-size: 1.1em;
		}

		.posts-list {
			padding: 2em 1em;
			max-width: 960px;
			margin: 0 auto;
		}

		.posts-list ul {
			display: flex;
			flex-direction: column;
			gap: 2rem;
			list-style-type: none;
			margin: 0;
			padding: 0;
		}

		.post-item {
			border-bottom: 1px solid rgb(var(--gray-light));
			padding-bottom: 2rem;
		}

		.post-item:last-child {
			border-bottom: none;
		}

		.post-item a {
			display: block;
			text-decoration: none;
			transition: 0.2s ease;
		}

		.post-item a:hover {
			transform: translateX(4px);
		}

		.post-item img {
			width: 100%;
			max-width: 720px;
			margin-bottom: 1rem;
			border-radius: 12px;
		}

		.post-title {
			margin: 0 0 0.5rem 0;
			color: rgb(var(--black));
			line-height: 1.2;
		}

		.post-date {
			margin: 0;
			color: rgb(var(--gray));
		}

		.post-description {
			margin: 0.5rem 0 0 0;
			color: rgb(var(--gray-dark));
		}

		.no-posts {
			padding: 4em 1em;
			text-align: center;
			color: rgb(var(--gray));
		}

		@media (max-width: 768px) {
			.tag-header {
				padding: 1.5em 1em;
			}

			.posts-list {
				padding: 1.5em 1em;
			}
		}
	</style>

	<div class="tag-header">
		<h1>#{decodedTag}</h1>
		<p class="tag-count">{taggedPosts.length}개의 글</p>
	</div>

	<div class="posts-list">
		{
			taggedPosts.length > 0 ? (
				<ul>
					{
						taggedPosts.map((post) => (
							<li class="post-item">
								<a href={`/blog/${post.id}/`}>
									{post.data.heroImage && (
										<Image
											width={720}
											height={360}
											src={post.data.heroImage}
											alt={post.data.title}
										/>
									)}
									<h2 class="post-title">{post.data.title}</h2>
									<p class="post-date">
										<FormattedDate date={post.data.pubDate} />
									</p>
									{post.data.description && (
										<p class="post-description">{post.data.description}</p>
									)}
								</a>
							</li>
						))
					}
				</ul>
			) : (
				<div class="no-posts">
					<p>이 태그로 작성된 글이 없습니다.</p>
				</div>
			)
		}
	</div>
</BaseLayout>


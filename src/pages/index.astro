---
import BaseLayout from '../layouts/BaseLayout.astro';
import ResumeHero from '../components/resume/ResumeHero.astro';
import ResumeSection from '../components/resume/ResumeSection.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

const experiences = [
  {
    title: "Senior Frontend Engineer",
    company: "Tech Company Inc.",
    period: "2023 - Present",
    description: [
      "Led the migration of legacy codebase to Next.js, improving performance by 40%.",
      "Mentored junior developers and established code review processes.",
      "Implemented a comprehensive design system using Tailwind CSS and Radix UI."
    ]
  },
  {
    title: "Frontend Developer",
    company: "Creative Agency",
    period: "2021 - 2023",
    description: [
      "Developed interactive 3D websites using Three.js and React Three Fiber.",
      "Collaborated with designers to implement pixel-perfect user interfaces.",
      "Optimized website accessibility to meet WCAG 2.1 AA standards."
    ]
  }
];

const projects = [
  {
    title: "E-commerce Dashboard",
    company: "Personal Project",
    period: "2023",
    description: [
      "Built a comprehensive analytics dashboard using React, D3.js, and TypeScript.",
      "implemented real-time data visualization and complex filtering systems."
    ]
  },
  {
    title: "AI Chat Interface",
    company: "Personal Project",
    period: "2024",
    description: [
      "Designed and developed a chat interface for LLMs using Vercel AI SDK.",
      "Focus on smooth typography and streaming response UX."
    ]
  }
];
---

<BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
	<div class="min-h-screen bg-white">
		<ResumeHero 
			name="Park Hee Jun"
			role="Frontend Engineer"
			description="Building digital products, brands, and experiences. Specialized in React, TypeScript, and Creative Development."
			githubUrl="https://github.com/heejunp"
			blogUrl="https://blog.heejunp.com"
			email="heejunp@email.com"
		/>

		<main class="pb-20">
			<ResumeSection title="Experience" items={experiences} />
			<ResumeSection title="Projects" items={projects} />
      
      <section class="max-w-3xl mx-auto px-4 py-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-6 border-b border-gray-200 pb-2">Skills</h2>
        <div class="flex flex-wrap gap-2">
          {["React", "TypeScript", "Next.js", "Tailwind CSS", "Three.js", "Node.js", "GraphQL", "PostgreSQL"].map((skill) => (
            <span class="px-3 py-1 bg-gray-100 text-gray-800 rounded-md text-sm font-medium hover:bg-gray-200 transition-colors cursor-default">
              {skill}
            </span>
          ))}
        </div>
      </section>
		</main>
	</div>
</BaseLayout>

